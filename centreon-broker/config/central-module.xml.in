<?xml version="1.0" encoding="UTF-8"?>
<conf>

 <!-- Global configuration options. -->
 <module_directory>@PREFIX_MODULES@</module_directory>
 <broker_id>3</broker_id>
 <broker_name>central-module</broker_name>
 <poller_id>1</poller_id>
 <poller_name>Central</poller_name>
 <event_queue_max_size>10000</event_queue_max_size>
 <flush_logs>no</flush_logs>
 <log_thread_id>no</log_thread_id>
 <log_timestamp>yes</log_timestamp>
 <command_file>/var/lib/centreon-broker/central-module.cmd</command_file>
 <name>central-module</name>

 <!-- Transmits external commands and configuration files from central-broker. -->
 <input>
  <buffering_timeout>10</buffering_timeout>
  <read_timeout>10</read_timeout>
  <retry_interval>60</retry_interval>
  <one_peer_retention_mode>no</one_peer_retention_mode>
  <protocol>bbdo</protocol>
  <negociation>yes</negociation>
  <type>tcp</type>
  <name>central-module-transfert-input</name>
  <host>localhost</host>
  <port>5669</port>
 </input>

 <!-- Send monitoring information to central-broker. -->
 <output>
  <buffering_timeout>10</buffering_timeout>
  <read_timeout>10</read_timeout>
  <retry_interval>60</retry_interval>
  <type>ipv4</type>
  <name>central-output</name>
  <port>5668</port>
  <host>localhost</host>
  <protocol>bbdo</protocol>
  <filters>
   <category>neb</category>
  </filters>
 </output>

 <!-- Write Broker external commands issued by central-broker. -->
 <output>
  <buffering_timeout>10</buffering_timeout>
  <read_timeout>10</read_timeout>
  <retry_interval>60</retry_interval>
  <type>dumper</type>
  <tagname>extcommand-broker-central-module</tagname>
  <path>/var/lib/centreon-broker/central-module.cmd</path>
  <name>extcommand-broker-central-module</name>
 </output>

 <!-- Write Engine external commands issued by central-broker. -->
 <output>
  <buffering_timeout>10</buffering_timeout>
  <read_timeout>10</read_timeout>
  <retry_interval>60</retry_interval>
  <type>dumper</type>
  <tagname>extcommand-engine-central-module</tagname>
  <path>/var/lib/centreon-engine/rw/centengine.cmd</path>
  <name>extcommand-engine-central-module</name>
 </output>

 <!-- Write Broker configuration files issued by central-broker. -->
 <output>
  <buffering_timeout>10</buffering_timeout>
  <read_timeout>10</read_timeout>
  <retry_interval>60</retry_interval>
  <type>dumper</type>
  <tagname>cfg-broker-central-module</tagname>
  <path>/etc/centreon-broker/$FILENAME$</path>
  <name>cfg-broker-central-module</name>
 </output>

 <!-- Write Engine configuration files issued by central-broker. -->
 <output>
  <buffering_timeout>10</buffering_timeout>
  <read_timeout>10</read_timeout>
  <retry_interval>60</retry_interval>
  <type>dumper</type>
  <tagname>cfg-engine-central-module</tagname>
  <path>/etc/centreon-engine/$FILENAME$</path>
  <name>cfg-engine-central-module</name>
 </output>

 <!-- Log file. -->
 <logger>
  <config>no</config>
  <debug>no</debug>
  <error>yes</error>
  <info>yes</info>
  <level>low</level>
  <type>file</type>
  <name>/var/log/centreon-broker/central-module.log</name>
 </logger>

 <!-- Statistics. -->
 <stats>
  <type>stats</type>
  <name>stats-central-broker</name>
  <fifo>/var/lib/centreon-broker/stats-central-module.fifo</fifo>
 </stats>

</conf>
