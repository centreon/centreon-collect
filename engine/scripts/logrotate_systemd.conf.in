@ENGINE_VAR_LOG_DIR@/*.log {
  compress
  create 644 @USER@ @GROUP@
  daily
  delaycompress
  missingok
  olddir @ENGINE_VAR_LOG_ARCHIVE_DIR@
  createolddir 755 @USER@ @GROUP@
  rotate 365
  postrotate
    if systemctl is-active --quiet centengine; then
        systemctl reload centengine
    fi
  endscript
}
