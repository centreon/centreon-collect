# Base information.
FROM registry.centreon.com/mon-dependencies-21.04:@DISTRIB@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install packages.
RUN yum clean all && yum install centreon-bi-reporting-server MariaDB-server

# Copy configuration files.
COPY mbi/21.04/cbis-profile.xml /etc/centreon-bi/cbis-profile.xml
COPY mbi/21.04/reports-profile.xml /etc/centreon-bi/reports-profile.xml

# Install script.
COPY mbi/21.04/install-server.sh /tmp/install.sh
RUN chmod +x /tmp/install.sh
RUN /tmp/install.sh

# Main script.
COPY mbi/21.04/run.sh /usr/local/bin/container.sh
RUN chmod +x /usr/local/bin/container.sh
ENTRYPOINT ["/usr/local/bin/container.sh"]
