# Base information.
FROM ci.int.centreon.com:5000/mon-ppm-3.4:@DISTRIB@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install package.
RUN yum --disablerepo='*' --enablerepo='centreon-internal*' clean all
RUN yum install -y centreon-export

# Install script.
COPY web/3.4/install-centreon-module.php /tmp/install-centreon-module.php
COPY ppe/3.4/ppe-install.sh /tmp/ppe-install.sh
RUN chmod +x /tmp/install-centreon-module.php /tmp/ppe-install.sh
RUN /tmp/ppe-install.sh
