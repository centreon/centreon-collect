# Base information.
FROM registry.centreon.com/mon-ppm-autodisco-20.10:@DISTRIB@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install package.
RUN yum install -y centreon-export && \
    yum clean all

# Install script.
COPY web/20.10/install-centreon-module.php /tmp/install-centreon-module.php
COPY ppe/20.10/ppe-install.sh /tmp/ppe-install.sh
RUN chmod +x /tmp/install-centreon-module.php /tmp/ppe-install.sh
RUN /tmp/ppe-install.sh
