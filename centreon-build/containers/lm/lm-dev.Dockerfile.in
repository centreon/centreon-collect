# Base information.
FROM ci.int.centreon.com:5000/mon-lm:centos@CENTOS_VERSION@
MAINTAINER Kevin Duret <kduret@centreon.com>

# Copy install scripts.
COPY install-centreon-module.php /tmp/install-centreon-module.php
COPY lm/install-dev.sh /tmp/install.sh
RUN chmod +x /tmp/install-centreon-module.php /tmp/install.sh

# Copy LM sources.
COPY centreon-license-manager /usr/share/centreon/www/modules/centreon-license-manager

# Run install script.
RUN /tmp/install.sh
