# Base information.
FROM ci.int.centreon.com:5000/mon-web:@DISTRIB@
MAINTAINER Kevin Duret <kduret@centreon.com>

# Install Centreon Plugins (discovery is based on this).
RUN cd /usr/lib/nagios/plugins && git clone https://github.com/centreon/centreon-plugins

# Install package.
RUN yum --disablerepo='*' --enablerepo=ces-standard-unstable-noarch clean all
RUN yum install -y --nogpgcheck centreon-automation

# Install module in Centreon.
COPY install-centreon-module.php /tmp/install-centreon-module.php
COPY automation/install.sh /tmp/install.sh
RUN chmod +x /tmp/install-centreon-module.php /tmp/install.sh
RUN /tmp/install.sh
