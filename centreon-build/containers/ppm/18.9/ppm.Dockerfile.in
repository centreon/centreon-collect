# Base information.
FROM @BASE_IMAGE@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Set middleware server.
ENV CENTREON_IMP_SERVER HELLOWORLD:http://ci.int.centreon.com:3000/api
RUN sed -i -e 's#http://middleware#http://ci.int.centreon.com#g' /etc/opt/rh/rh-php71/php-fpm.d/www.conf

# Install package.
RUN yum --disablerepo='*' --enablerepo='centreon-internal*' clean all && \
    yum install -y centreon-pp-manager && \
    yum clean all

# Install Plugin Pack JSON files.
COPY middleware/data/pluginpacks/**/*.json /usr/share/centreon-packs/

# Install module in Centreon.
COPY web/18.9/install-centreon-module.php /tmp/install-centreon-module.php
COPY ppm/18.9/install.sh /tmp/install.sh
RUN chmod +x /tmp/install-centreon-module.php /tmp/install.sh && \
    /tmp/install.sh
