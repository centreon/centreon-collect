# Base information.
FROM @BASE_IMAGE@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install Centreon Map web client and Centreon BAM.
RUN yum install -y centreon-bam-server centreon-map4-web-client && \
    yum clean all
COPY web/20.10/install-centreon-module.php /tmp/install-centreon-module.php
RUN chmod +x /tmp/install-centreon-module.php

# Install license file.
COPY bam/bam.license /etc/centreon/license.d/bam.license
COPY map/licence.json.asc /etc/centreon/license.d/map.license

# Install script.
COPY map/20.10/install-web.sh /tmp/install.sh
RUN chmod +x /tmp/install.sh
RUN /tmp/install.sh
