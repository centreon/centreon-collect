# Base information.
FROM @BASE_IMAGE@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install repository.
COPY repo/centreon-internal.repo /etc/yum.repos.d/centreon-internal.repo

# Install Centreon Map web client.
RUN yum install -y centreon-map4-web-client && \
    rm -f /etc/yum.repos.d/centreon-internal.repo && \
    yum clean all
COPY web/3.4/install-centreon-module.php /tmp/install-centreon-module.php
RUN chmod +x /tmp/install-centreon-module.php

# Install script.
COPY map/3.4/install-web.sh /tmp/install.sh
RUN chmod +x /tmp/install.sh
RUN /tmp/install.sh
