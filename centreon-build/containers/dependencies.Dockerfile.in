# Base.
FROM centos:@CENTOS_VERSION@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>
RUN echo 'gpgcheck=0' >> /etc/yum.conf
RUN echo 'http_caching=none' >> /etc/yum.conf
COPY repo/centreon-standard-stable.centos@CENTOS_VERSION@.repo /etc/yum.repos.d/centreon-standard-stable.repo
COPY repo/centreon-internal.centos@CENTOS_VERSION@.repo /etc/yum.repos.d/centreon-internal.repo

# Install properly packaged dependencies.
RUN mkdir /usr/share/monitoring
COPY dependencies.centos@CENTOS_VERSION@.txt /usr/share/monitoring/dependencies.txt
RUN yum install --nogpgcheck -y `cat /usr/share/monitoring/dependencies.txt`
RUN yum install --nogpgcheck -y bzip2 curl git nc wget php-process
RUN echo 'date.timezone = Europe/Paris' > /etc/php.d/centreon.ini

# Install Node.js and related elements.
RUN curl --silent --location https://rpm.nodesource.com/setup_4.x | bash -
RUN yum install --nogpgcheck -y nodejs
RUN npm install -g gulp

# Install PhantomJS.
RUN wget https://bitbucket.org/ariya/phantomjs/downloads/phantomjs-2.1.1-linux-x86_64.tar.bz2
RUN tar xjf phantomjs-2.1.1-linux-x86_64.tar.bz2
RUN mv phantomjs-2.1.1-linux-x86_64/bin/phantomjs /usr/local/bin/phantomjs
RUN chmod +x /usr/local/bin/phantomjs

# Install composer.
RUN curl -sS https://getcomposer.org/installer | php
RUN mv composer.phar /usr/local/bin/composer
RUN chmod +x /usr/local/bin/composer
