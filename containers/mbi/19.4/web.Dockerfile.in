# Base information.
FROM registry.centreon.com/mon-web-19.4:@DISTRIB@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install Centreon MBI repository.
RUN curl -o centreon-mbi-release.rpm "http://srvi-repo.int.centreon.com/yum/mbi/5e0524c1c4773a938c44139ea9d8b4d7/19.4/el7/stable/noarch/RPMS/centreon-mbi-release-19.4-2.el7.centos.noarch.rpm"
RUN yum install --nogpgcheck centreon-mbi-release.rpm
RUN sed -i -e 's#yum.centreon.com/centreon-mbi#srvi-repo.int.centreon.com/yum/mbi#g' -e 's/enabled=0/enabled=1/g' /etc/yum.repos.d/centreon-mbi.repo

# Install Centreon MBI web interface.
RUN yum --disablerepo='*' --enablerepo='centreon*' clean all
RUN yum install --enablerepo='centreon*' centreon-bi-server
COPY web/19.4/install-centreon-module.php /tmp/install-centreon-module.php
RUN chmod +x /tmp/install-centreon-module.php

# Install script.
COPY mbi/19.4/install-web.sh /tmp/install.sh
RUN chmod +x /tmp/install.sh
RUN /tmp/install.sh
