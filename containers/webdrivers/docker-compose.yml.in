version: '3'
services:
  webdriver:
    container_name: webdriver
    image: selenium/hub:latest
    environment:
    - GRID_TIMEOUT=180
    ports:
    - "4444:4444"
  chrome:
    image: selenium/node-chrome:latest
    depends_on:
    - webdriver
    environment:
    - DBUS_SESSION_BUS_ADDRESS=/dev/null
    - HUB_PORT_4444_TCP_ADDR=webdriver
    - HUB_PORT_4444_TCP_PORT=4444
    volumes:
    - /dev/shm:/dev/shm
