version: '2'
services:
  webdriver:
    container_name: webdriver
    image: selenium/standalone-chrome:latest
    ports:
    - "4444:4444"
    environment:
    - NODE_MAX_INSTANCES=10
    - NODE_MAX_SESSION=5
    - SCREEN_WIDTH=1600
    - SCREEN_HEIGHT=2000
    - DBUS_SESSION_BUS_ADDRESS=/dev/null
    volumes:
    - /dev/shm:/dev/shm
