version: '2'
services:
  web:
    image: @WEB_IMAGE@
    ports:
    - "80"
    - "3306"
    links:
    - "middleware:api.imp.centreon.com"
    external_links:
    - webdriver
    networks:
    - default
    - webdriver_default
  middleware:
    image: @MIDDLEWARE_IMAGE@
    ports:
    - "3000"
    - "3306"
    extra_hosts:
    - "crm.int.centreon.com:10.24.11.73"
    - "support.centreon.com:10.30.2.62"
    networks:
    - default
    - webdriver_default
  openldap:
    image: registry.centreon.com/mon-openldap:latest
  redis:
    image: redis:latest
networks:
  webdriver_default:
    external: true
