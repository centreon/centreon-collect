FROM @BASE_IMAGE@
LABEL maintainer="Matthieu Kermagoret <mkermagoret@centreon.com>"

COPY web/21.04/install-centreon-widget.php web/21.04/widgets.sh /tmp/
RUN yum clean all && yum install -y 'centreon-widget-*' && \
    rm -f /etc/yum.repos.d/centreon-internal.repo && \
    yum clean all && \
    sh /tmp/widgets.sh
