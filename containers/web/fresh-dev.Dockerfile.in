# Base information.
FROM ci.int.centreon.com:5000/mon-dependencies:centos@CENTOS_VERSION@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install Centreon by shell.
COPY centreon /tmp
RUN chmod +x /tmp/centreon/install.sh
RUN /tmp/centreon/install.sh -f web/vars

# Install Centreon by web.
COPY web/autoinstall.php /usr/share/centreon/autoinstall.php
COPY web/fresh.sh /tmp/centreon/fresh.sh
RUN chmod +x /tmp/centreon/fresh.sh
RUN /tmp/centreon/fresh.sh
