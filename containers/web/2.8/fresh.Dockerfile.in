# Base information.
FROM @BASE_IMAGE@
MAINTAINER Matthieu Kermagoret <mkermagoret@centreon.com>

# Install repository.
COPY repo/centreon-private.repo /etc/yum.repos.d/centreon-private.repo

# Install Centreon Web.
RUN yum clean all && yum clean packages
RUN yum install --nogpgcheck -y centreon-base-config-centreon-engine centreon centreon-broker* mysql-server git
COPY web/2.8/centengine.sh /etc/init.d/centengine
COPY web/2.8/cbd.sh /etc/init.d/cbd
RUN chmod +x /etc/init.d/centengine /etc/init.d/cbd

# Prepare environment for autoinstall.
COPY web/2.8/autoinstall.php /usr/share/centreon/autoinstall.php
RUN mkdir /usr/share/centreon/www/install/tmp
COPY web/2.8/configuration/* /usr/share/centreon/www/install/tmp/
RUN chown -R apache.apache /usr/share/centreon/www/install/tmp

# Install script (web-wizard install).
COPY web/2.8/fresh.sh /tmp/install.sh
COPY web/2.8/kb.sql web/2.8/openldap.sql web/2.8/kb.sh web/2.8/openldap.sh /tmp/
RUN chmod +x /tmp/install.sh /tmp/kb.sh /tmp/openldap.sh
RUN /tmp/install.sh && /tmp/kb.sh && /tmp/openldap.sh

# Main script.
COPY web/2.8/run.sh /usr/share/centreon/container.sh
RUN chmod +x /usr/share/centreon/container.sh
ENTRYPOINT ["/usr/share/centreon/container.sh"]
