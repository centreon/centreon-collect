{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "eu-west-1"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "jenkins-ci-slave-{{timestamp}}",
            "instance_type": "m5.large",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": "100"
                }
            ],
            "region": "{{user `region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "security_group_ids": ["sg-e0624684"],
            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm",
              "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
              "root-device-type": "ebs"
              },
              "owners": ["099720109477"],
              "most_recent": true
            },
            "ssh_username": "ubuntu",
            "subnet_id": "subnet-265b947f",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./id_rsa.pub",
            "destination": "/home/ubuntu/.ssh/id_rsa.pub"
        },
        {
            "type": "file",
            "source": "./id_rsa",
            "destination": "/home/ubuntu/.ssh/id_rsa"
        },
        {
            "type": "file",
            "source": "./authorized_keys",
            "destination": "/home/ubuntu/.ssh/authorized_keys"
        },
        {
            "type": "file",
            "source": "./images.txt",
            "destination": "/home/ubuntu/images.txt"
        },
        {
            "type": "shell",
            "inline":[
                "sudo apt-get --assume-yes update",
                "sudo apt-get --assume-yes dist-upgrade",
                "sudo apt-get --assume-yes install apt-transport-https ca-certificates curl gnupg-agent software-properties-common",
                "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
                "sudo add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\"",
                "sudo apt-get --assume-yes install default-jre docker-ce docker-ce-cli containerd.io git php-cli",
                "ssh-keyscan -t rsa github.com >> /home/ubuntu/.ssh/known_hosts",
                "cd /home/ubuntu && git clone ssh://git@github.com/centreon/centreon-build",
                "sudo mv /home/ubuntu/centreon-build /opt/centreon-build",
                "sudo usermod -aG docker ubuntu",
                "sudo systemctl enable docker",
                "for i in `cat /home/ubuntu/images.txt` ; do sudo docker pull $i ; done",
                "sudo rm -rf /home/ubuntu/.docker",
                "sudo curl -o /usr/local/bin/composer https://getcomposer.org/composer.phar",
                "sudo chmod +x /usr/local/bin/composer"
            ]
        }
    ]
}
