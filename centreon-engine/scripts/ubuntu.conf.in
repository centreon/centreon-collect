# Centreon Engine Service

description     "Centreon Engine"
author          "Matthieu Kermagoret <mkermagoret@merethis.com>"

start on (local-filesystems
	  and runlevel [2345])
stop on runlevel [!2345]

respawn

env HOME=@sysconfdir@
umask 007

# Default of 5 seconds is too low.
kill timeout 180

pre-start script
    # Sanity checks.
    [ -r "$HOME/centengine.cfg" ]
#    [ -d /var/run/mysqld ] || install -m 755 -o mysql -g root -d /var/run/mysqld
end script

exec sudo -g @GROUP@ -u @USER@ @bindir@/centengine "$HOME/centengine.cfg"
